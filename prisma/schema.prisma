generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  password      String?
  role          Role      @default(STUDENT)
  credits       Int       @default(50)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts      Account[]
  sessions      Session[]
  coursesCreated Course[]  @relation("CourseInstructor")
  enrollments   Enrollment[]
  exerciseSubmissions ExerciseSubmission[]
  videoProgress VideoProgress[]
  reviews       Review[]
  certificates  Certificate[]
  payments      Payment[]
  tradesRequested CourseTrade[] @relation("TradeRequester")
  tradesReceived  CourseTrade[] @relation("TradeRecipient")
  bountiesCreated Bounty[]      @relation("BountyCreator")
  bountiesFulfilled Bounty[]    @relation("BountyFulfiller")
  bountyNotifications BountyNotification[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Course {
  id          String   @id @default(cuid())
  title       String
  description String   @db.Text
  thumbnail   String?
  category    String
  level       Level    @default(BEGINNER)
  price       Float    @default(0) // Only 0 or 50 credits
  published   Boolean  @default(false)
  instructorId String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  instructor  User       @relation("CourseInstructor", fields: [instructorId], references: [id], onDelete: Cascade)
  videos      Video[]
  materials   Material[]
  exercises   Exercise[]
  enrollments Enrollment[]
  codeRepos   CodeRepository[]
  reviews     Review[]
  certificates Certificate[]
  payments    Payment[]
  tradesAsRequester CourseTrade[] @relation("RequesterCourse")
  tradesAsRecipient CourseTrade[] @relation("RecipientCourse")
  fulfilledBounties  Bounty[] @relation("FulfilledCourse")
}

model Video {
  id          String   @id @default(cuid())
  title       String
  description String?  @db.Text
  url         String
  duration    Int?
  order       Int
  courseId    String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  course   Course     @relation(fields: [courseId], references: [id], onDelete: Cascade)
  materials Material[]
  progress VideoProgress[]

  @@index([courseId])
}

model Material {
  id        String   @id @default(cuid())
  title     String
  type      MaterialType
  url       String
  size      Int?
  videoId   String?
  courseId  String
  createdAt DateTime @default(now())

  video  Video?  @relation(fields: [videoId], references: [id], onDelete: Cascade)
  course Course  @relation(fields: [courseId], references: [id], onDelete: Cascade)

  @@index([courseId])
  @@index([videoId])
}

model Exercise {
  id          String   @id @default(cuid())
  title       String
  description String?  @db.Text
  type        ExerciseType
  question    String   @db.Text
  options     Json?
  correctAnswer String?
  points      Int      @default(10)
  courseId    String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  course      Course               @relation(fields: [courseId], references: [id], onDelete: Cascade)
  submissions ExerciseSubmission[]

  @@index([courseId])
}

model ExerciseSubmission {
  id         String   @id @default(cuid())
  answer     String   @db.Text
  score      Int?
  exerciseId String
  userId     String
  createdAt  DateTime @default(now())

  exercise Exercise @relation(fields: [exerciseId], references: [id], onDelete: Cascade)
  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([exerciseId, userId])
  @@index([userId])
}

model CodeRepository {
  id          String   @id @default(cuid())
  name        String
  description String?  @db.Text
  repoUrl     String
  branch      String   @default("main")
  courseId    String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  course Course @relation(fields: [courseId], references: [id], onDelete: Cascade)

  @@index([courseId])
}

model Enrollment {
  id          String   @id @default(cuid())
  userId      String
  courseId    String
  enrolledAt  DateTime @default(now())
  completedAt DateTime?
  progress    Float    @default(0)

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  course Course @relation(fields: [courseId], references: [id], onDelete: Cascade)

  @@unique([userId, courseId])
  @@index([userId])
  @@index([courseId])
}

model VideoProgress {
  id           String   @id @default(cuid())
  userId       String
  videoId      String
  completed    Boolean  @default(false)
  lastPosition Int      @default(0) // in seconds
  watchedAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  video Video @relation(fields: [videoId], references: [id], onDelete: Cascade)

  @@unique([userId, videoId])
  @@index([userId])
  @@index([videoId])
}

model Review {
  id        String   @id @default(cuid())
  rating    Int      // 1-5 stars
  comment   String?  @db.Text
  userId    String
  courseId  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  course Course @relation(fields: [courseId], references: [id], onDelete: Cascade)

  @@unique([userId, courseId])
  @@index([userId])
  @@index([courseId])
}

model Certificate {
  id             String   @id @default(cuid())
  userId         String
  courseId       String
  certificateUrl String?
  issuedAt       DateTime @default(now())

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  course Course @relation(fields: [courseId], references: [id], onDelete: Cascade)

  @@unique([userId, courseId])
  @@index([userId])
  @@index([courseId])
}

model Payment {
  id              String        @id @default(cuid())
  userId          String
  courseId        String
  amount          Float
  currency        String        @default("INR")
  status          PaymentStatus @default(PENDING)
  stripePaymentId String?
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  course Course @relation(fields: [courseId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([courseId])
}

model CourseTrade {
  id                 String      @id @default(cuid())
  requesterId        String
  requesterCourseId  String
  recipientId        String
  recipientCourseId  String
  status             TradeStatus @default(PENDING)
  createdAt          DateTime    @default(now())
  updatedAt          DateTime    @updatedAt

  requester          User   @relation("TradeRequester", fields: [requesterId], references: [id], onDelete: Cascade)
  recipient          User   @relation("TradeRecipient", fields: [recipientId], references: [id], onDelete: Cascade)
  requesterCourse    Course @relation("RequesterCourse", fields: [requesterCourseId], references: [id], onDelete: Cascade)
  recipientCourse    Course @relation("RecipientCourse", fields: [recipientCourseId], references: [id], onDelete: Cascade)

  @@index([requesterId])
  @@index([recipientId])
  @@index([requesterCourseId])
  @@index([recipientCourseId])
  @@unique([requesterCourseId, recipientCourseId, requesterId, recipientId, status])
}

model Bounty {
  id                String       @id @default(cuid())
  title             String
  description       String?
  amount            Int
  status            BountyStatus @default(OPEN)
  createdById       String
  fulfilledById     String?
  fulfilledCourseId String?
  createdAt         DateTime     @default(now())
  updatedAt         DateTime     @updatedAt

  createdBy        User   @relation("BountyCreator", fields: [createdById], references: [id], onDelete: Cascade)
  fulfilledBy      User?  @relation("BountyFulfiller", fields: [fulfilledById], references: [id])
  fulfilledCourse  Course? @relation("FulfilledCourse", fields: [fulfilledCourseId], references: [id])
  notifications    BountyNotification[]

  @@index([status])
  @@index([createdById])
}

model BountyNotification {
  id         String   @id @default(cuid())
  userId     String
  bountyId   String
  seen       Boolean  @default(false)
  createdAt  DateTime @default(now())

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  bounty Bounty @relation(fields: [bountyId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([seen])
  @@index([createdAt])
}

enum TradeStatus {
  PENDING
  ACCEPTED
  DECLINED
}

enum BountyStatus {
  OPEN
  CLOSED
}

enum PaymentStatus {
  PENDING
  COMPLETED
  FAILED
  REFUNDED
}

enum Role {
  STUDENT
  INSTRUCTOR
  ADMIN
}

enum Level {
  BEGINNER
  INTERMEDIATE
  ADVANCED
}

enum MaterialType {
  PDF
  DOCUMENT
  SLIDES
  CODE
  OTHER
}

enum ExerciseType {
  MCQ
  CODING
  TEXT
}
